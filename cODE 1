#include <stdio.h>

int main() {
    // Вхідні дані
    const int n = 3; 
    const int m = 4; 
    int k = 0; 
    int p = 2; 
    int A[3][4] = {
        {3, -2, 4, 9},
        {0, 3, 10, 3},
        {5, -4, -6, 0}
    };
    
    int choice;
    
    do {
    
        printf("\nМеню:\n");
        printf("1. Вивести вихідну матрицю\n");
        printf("2. Переставити стовпці матриці\n");
        printf("3. Вийти\n");
        printf("Виберіть опцію: ");
        scanf("%d", &choice);
        
        switch(choice) {
            case 1:
                printf("Вхідна матриця:\n");
                for (int i = 0; i < n; i++) {
                    for (int j = 0; j < m; j++) {
                        printf("%d ", A[i][j]);
                    }
                    printf("\n");
                }
                break;
            case 2:
            
                for (int i = 0; i < n; i++) {
                    int temp = A[i][k]; 
                    A[i][k] = A[i][p]; 
                    A[i][p] = temp;    
                }
                printf("\nМатриця після перестановки стовпців %d та %d:\n", k, p);
                for (int i = 0; i < n; i++) {
                    for (int j = 0; j < m; j++) {
                        printf("%d ", A[i][j]);
                    }
                    printf("\n");
                }
                break;
            case 3:
                printf("До побачення!\n");
                break;
            default:
                printf("Невірний вибір. Будь ласка, введіть вірну опцію.\n");
        }
        
    } while (choice != 3);
    
    return 0;
}
