#include <stdio.h>

int main() {
    // Вхідні дані
    const int n = 3; // кількість рядків
    const int m = 4; // кількість стовпців
    int k = 0; // перший стовпець для перестановки
    int p = 2; // другий стовпець для перестановки
    int A[3][4] = {
        {3, -2, 4, 9},
        {0, 3, 10, 3},
        {5, -4, -6, 0}
    };
    
    int choice; // змінна для збереження вибору користувача
    
    do {
        // Виведення меню
        printf("\nМеню:\n");
        printf("1. Вивести вихідну матрицю\n");
        printf("2. Переставити стовпці матриці\n");
        printf("3. Вийти\n");
        printf("Виберіть опцію: ");
        scanf("%d", &choice);
        
        switch(choice) {
            case 1:
                // Виведення вхідної матриці
                printf("Вхідна матриця:\n");
                for (int i = 0; i < n; i++) {
                    for (int j = 0; j < m; j++) {
                        printf("%d ", A[i][j]);
                    }
                    printf("\n");
                }
                break;
            case 2:
                // Перестановка стовпців k та p
                for (int i = 0; i < n; i++) {
                    int temp = A[i][k]; // Зберігаємо значення елемента з індексом (i, k)
                    A[i][k] = A[i][p];  // Присвоюємо елементу з індексом (i, k) значення елемента з індексом (i, p)
                    A[i][p] = temp;     // Присвоюємо елементу з індексом (i, p) збережене значення з індексом (i, k)
                }
                // Виведення зміненої матриці
                printf("\nМатриця після перестановки стовпців %d та %d:\n", k, p);
                for (int i = 0; i < n; i++) {
                    for (int j = 0; j < m; j++) {
                        printf("%d ", A[i][j]);
                    }
                    printf("\n");
                }
                break;
            case 3:
                printf("До побачення!\n");
                break;
            default:
                printf("Невірний вибір. Будь ласка, введіть вірну опцію.\n");
        }
        
    } while (choice != 3);
    
    return 0;
}
